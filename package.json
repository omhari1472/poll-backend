{
  "name": "quickpoll-backend",
  "version": "1.0.0",
  "description": "QuickPoll Backend - Real-time polling platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "postinstall": "tsc && tsc-alias",
    "migrate": "drizzle-kit generate:mysql",
    "migrate:push": "drizzle-kit push:mysql",
    "migrate:studio": "drizzle-kit studio",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "mysql2": "^3.6.5",
    "zod": "^3.22.4",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "tsx": "^4.6.0",
    "drizzle-kit": "^0.20.4",
    "tsc-alias": "^1.8.10"
  },
  "keywords": ["polling", "realtime", "websocket", "express", "mysql"],
  "author": "QuickPoll Team",
  "license": "MIT"
}
